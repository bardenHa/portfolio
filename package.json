{
  "name": "bardenha-portfolio",
  "version": "0.0.0",
  "description": "My personal portfolio and blog",
  "repository": {
    "url": "https://github.com/bardenha/portfolio"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro check && pnpm run typecheck && pnpm run lint && pnpm run format && pnpm run build",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ./src",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx ./src",
    "format": "prettier --check \"src/**/*.{js,jsx,ts,tsx,astro,json,css,scss,md}\" --plugin=prettier-plugin-astro --plugin=prettier-plugin-tailwindcss",
    "format:fix": "prettier --write \"src/**/*.{js,jsx,ts,tsx,astro,json,css,scss,md}\" --plugin=prettier-plugin-astro --plugin=prettier-plugin-tailwindcss",
    "typecheck": "tsc --noEmit",
    "test:a11y": "TODO: fix sitemap pa11y-ci --config .pa11yci.json --sitemap http://localhost:3000/sitemap-index.xml --sitemap-find https://barden.dev --sitemap-replace http://localhost:3000",
    "a11ycheck": "start-server-and-test preview http://localhost:3000 test:a11y"
  },
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@astrojs/check": "^0.2.0",
    "@astrojs/mdx": "^1.0.0",
    "@astrojs/prefetch": "^0.4.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/solid-js": "^3.0.0",
    "@astrojs/tailwind": "^5.0.0",
    "@stitches/core": "^1.2.8",
    "@thoughtbot/tailwindcss-aria-attributes": "^0.2.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/node": "^20.4.7",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "astro": "^3.0.2",
    "class-variance-authority": "^0.7.0",
    "eslint": "^8.43.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-check-file": "^2.6.2",
    "eslint-plugin-functional": "^6.0.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-solid": "^0.12.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "pa11y-ci": "^3.0.1",
    "prettier": "^3.0.2",
    "prettier-plugin-astro": "^0.11.1",
    "prettier-plugin-tailwindcss": "^0.5.3",
    "rambda": "^8.3.0",
    "rehype-prism-plus": "^1.6.3",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.66.1",
    "solid-js": "^1.7.11",
    "start-server-and-test": "^2.0.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  }
}
